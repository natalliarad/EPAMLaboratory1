<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.radaman.natallia.epamlab1.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/question_holiday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question_holiday"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/day_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day_counter"
            android:layout_margin="16dp"
            android:textSize="24sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/button_howMuch"
            android:layout_width="wrap_content"
            android:layout_margin="16dp"
            android:layout_centerInParent="true"
            android:padding="16dp"
            android:layout_height="wrap_content"
            android:text="@string/how_much"
            android:background="@android:color/holo_green_light"
            />
    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
